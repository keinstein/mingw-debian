CPP="${arch}-cpp"
CC="${arch}-gcc"
CXX="${arch}-g++"
RANLIB="${arch}-ranlib"
WINDRES="${arch}-windres"
LD="${arch}-ld"
AR="${arch}-ar"
AS="${arch}-as"
STRIP="${arch}-strip"
DLLTOOL="${arch}-dlltool"
NM="${arch}-nm"
OBJDUMP="${arch}-objdump"
if [ -n "$FORCE_WINEPREFIX" ]
then
	WINEPREFIX="$FORCE_WINEPREFIX"
else
	WINEPREFIX="$HOME/.${arch}-wine"
fi
gccdirs=`$CC --print-search-dirs | sed -e '/libraries:/ { s/^.*=//g; p } ; d '`
if [ -n "$WINEDLLPATH" ]
then 
    WINEDLLPATH="$WINEDLLPATH:"
fi
WINEDLLPATH="$WINEDLLPATH/usr/$arch/lib:/usr/lib/$arch:$gccdirs"


outputpath=""

makeoutputpath() {
echo -n $WINEDLLPATH | tr : '\n' | \
while read part 
do
	if [ -n "$part" ]
	then
		part=`readlink -m "$part"`
		if [ -n "$part" ]
		then
			part="`echo \"$part\" | sed -e's,/,\\\\\\\\,g'`"
			if [ "-z" "$outputpath" ]
			then
				outputpath="Z:$part"
				echo -n "Z:$part"
			else
				outputpath="$outputpath;Z:$part"
				echo -n ";Z:$part"
			fi
		fi
	else
		outputpath="$outputpath;" >&2
		echo -n ";"
	fi
done
}

WINWINEDLLPATH=`makeoutputpath`
UNIXPATH="$PATH"

export CC
export CXX
export RANLIB
export WINDRES
export LD
export AR
export AS
export STRIP
export DLLTOOL
export NM
export OBJDUMP
export WINEPREFIX
export WINEDLLPATH
export WINWINEDLLPATH
export UNIXPATH

PREFIX="/usr/${arch}"
PATH="$PREFIX/bin:$WINEDLLPATH:$PATH"
export PREFIX
export PATH
