CC="${arch}-gcc"
CXX="${arch}-g++"
RANLIB="${arch}-ranlib"
WINDRES="${arch}-windres"
LD="${arch}-ld"
AR="${arch}-ar"
AS="${arch}-as"
STRIP="${arch}-strip"
DLLTOOL="${arch}-dlltool"
NM="${arch}-nm"
OBJDUMP="${arch}-objdump"
WINEPREFIX="$HOME/.${arch}-wine"

gccdirs=`$CC --print-search-dirs | sed -e '/libraries:/ { s/^.*=//g; p } ; d '`
if [ -n "$WINEDLLPATH" ]
then 
    WINEDLLPATH="$WINEDLLPATH:"
fi
WINEDLLPATH="$WINEDLLPATH/usr/lib/$arch:$gccdirs"


export CC
export CXX
export RANLIB
export WINDRES
export LD
export AR
export AS
export STRIP
export DLLTOOL
export NM
export OBJDUMP
export WINEPREFIX
export WINEDLLPATH

PREFIX="$HOME/.local/${arch}/usr"
PATH="$PREFIX/bin:$WINEDLLPATH:$PATH"
export PREFIX
export PATH
